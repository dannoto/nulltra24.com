---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/HeaderInner.astro';
import { SEO } from 'astro-seo';

---

<SEO
  slot="SEO"
  title="About Nutra24 - Trusted Nutraceutical Reviews"
  titleTemplate="%s - Nutra24 Health Products"
  titleDefault="Nutra24 Health Products"
  description="Learn about Nutra24's mission to provide transparent, evidence-based reviews of nutraceutical supplements to help you make informed health decisions."
  canonical={Astro.url.href}
  noindex={false}
  nofollow={false}
  charset="UTF-8"
  openGraph={{
    basic: {
      title: "About Nutra24 - Trusted Nutraceutical Reviews",
      type: "website",
      image: "/assets/content/Color.webp",
      url: Astro.url.href,
    },
    optional: {
      description: "Learn about Nutra24's mission to provide transparent, evidence-based reviews of nutraceutical supplements to help you make informed health decisions.",
      siteName: "Nutra24",
      locale: "en_US",
      determiner: "auto",
    },
    image: {
      alt: "Nutra24 Health Products",
      width: 1200,
      height: 630,
      type: "image/webp",
    },
  }}
  twitter={{
    card: "summary_large_image",
    site: "@nutra24",
    creator: "@nutra24",
    title: "About Nutra24 - Trusted Nutraceutical Reviews",
    image: "/assets/content/Color.webp",
    imageAlt: "Nutra24 Health Products",
    description: "Learn about Nutra24's mission to provide transparent, evidence-based reviews of nutraceutical supplements to help you make informed health decisions.",
  }}
  extend={{
    link: [{ rel: "icon", href: "/favicon.svg" }],
    meta: [
      {
        name: "keywords",
        content: "about Nutra24, nutraceutical reviews, supplement reviews, health blog, evidence-based, transparency, nutraceuticals",
      },
    ],
  }}
/>
<Layout title="About Nutra24 - Trusted Nutraceutical Reviews" description="Learn about Nutra24's mission to provide transparent, evidence-based reviews of nutraceutical supplements to help you make informed health decisions.">
  <Header />
  
  <main class="bg-white py-12 px-4 sm:px-6 lg:px-8 max-w-5xl mx-auto">
